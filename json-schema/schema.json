{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/baloola/project/refs/heads/main/json-schema/schema.json#",
  "title": "Project Extension",
  "description": "STAC project Extension for STAC Items.",
  "type": "object",
  "required": [
    "stac_extensions"
  ],
  "properties": {
    "stac_extensions": {
      "type": "array",
      "contains": {
        "const": "https://raw.githubusercontent.com/baloola/project/refs/heads/main/json-schema/schema.json"
      }
    }
  },
  "oneOf": [
    {
      "$comment": "This is the schema for STAC Items.",
      "type": "object",
      "properties": {
        "type": {
          "const": "Feature"
        },
        "properties": {
          "$ref": "#/definitions/fields"
        }
      }
    }
  ],
  "definitions": {
    "fields": {
      "type": "object",
      "properties": {
        "properties": {
          "validate:quality_measures": {
            "type": "string"
          },
          "validate:workflow": {
            "allOf": [
              {
                "$ref": "#/definitions/link"
              },
              {
                "type": "object",
                "required": [
                  "rel",
                  "type"
                ],
                "properties": {
                  "rel": {
                    "const": "related"
                  }
                }
              }
            ]
          }
        }
      }
    },
    "link": {
      "type": "object",
      "required": [
        "rel",
        "href"
      ],
      "properties": {
        "href": {
          "type": "string",
          "format": "iri-reference",
          "minLength": 1
        },
        "rel": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      }
    }
  }
}